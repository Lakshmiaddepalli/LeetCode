class Solution {
    public boolean isPalindrome(int x) {
        
        String s = Integer.toString(x);
        boolean ans = true;
        
        for(int i = 0; i < s.length()/2; i++){
            if(s.charAt(i) != s.charAt(s.length() - 1 - i)){
                ans =false;
                return ans;
            }
        }
        return ans;
    }
}
